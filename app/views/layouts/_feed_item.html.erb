<li>
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <p class="user"><%= link_to feed_item.user.name, feed_item.user %>
  <p class="content"><%= feed_item.content %></p>
  <p class="timestamp">Posted <%= time_ago_in_words(feed_item.created_at)%> ago.</p>
  <% if current_user?(feed_item.user) %>
  <%= link_to "delete", feed_item, :method => :delete, :confirm => "Are you sure?", :title => feed_item.content %>
  <% end %>
</li>